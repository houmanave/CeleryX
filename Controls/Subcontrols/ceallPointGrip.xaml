<Thumb x:Class="Celery.Controls.Subcontrols.ceallPointGrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celery.Controls.Subcontrols"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="15" DragDelta="Thumb_DragDelta">
    <Thumb.Template>
        <ControlTemplate>
            <Ellipse Stroke="#FF75C7FF">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF003F6A"/>
                        <GradientStop Color="#FF61BEFF" Offset="1"/>
                        <GradientStop Color="#FFD5EEFF" Offset="0.525"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
