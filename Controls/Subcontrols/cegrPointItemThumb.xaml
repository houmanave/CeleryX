<Thumb x:Name="CeGrPointItemThumb" x:Class="Celery.Controls.Subcontrols.cegrPointItemThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celery.Controls.Subcontrols"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="10">
    <Thumb.Template>
        <ControlTemplate>
            <Ellipse x:Name="TheEllipse" Stroke="Black" Fill="{Binding Background, ElementName=CeGrPointItemThumb}" StrokeThickness="2" Width="10" Height="10" />
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
